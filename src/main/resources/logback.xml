<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="FILE"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/logFile.log</file>
        <rollingPolicy
            class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>logFile.%d{yyyy-MM-dd}.log
            </fileNamePattern>
            <!-- keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} %5p | %t | %-55logger{55} | %m
                %n</pattern>
        </encoder>
    </appender>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} %5p | %t | %-55logger{55} | %m
                %n</pattern>
        </encoder>
    </appender>

    <logger name="com.percipient.matrix" level="INFO">
        <appender-ref ref="FILE" />
    </logger>

    <!-- <logger name="com.percipient" level="ERROR"> <appender-ref ref="CONSOLE" 
        /> </logger> -->

    <!-- Error from other dependencies -->
    <root level="ERROR">
        <appender-ref ref="FILE" />
    </root>
</configuration>